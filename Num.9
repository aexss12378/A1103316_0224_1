import java.util.Scanner;

public class num9 {

    public static void main(String[] args) {
        int num1;
        System.out.println("請輸入一個任意整數");
        Scanner num =new Scanner(System.in);
        num1 = num.nextInt();
        if (num1 % 2 == 0) {
            System.out.printf("%d是偶數",num1);
        } else {
            System.out.printf("%d是奇數",num1);
        }
    }
}
